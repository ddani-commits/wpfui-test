<Page x:Class="UiDesktopApp1.Views.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UiDesktopApp1.Views.Pages"
      mc:Ignorable="d" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:controls="clr-namespace:UiDesktopApp1.Controls"
      Title="ProductsPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Botón -->
            <RowDefinition Height="*"/>
            <!-- Lista con scroll -->
        </Grid.RowDefinitions>

        <!-- Botón que queda fijo -->
        <Button 
            Grid.Row="0"
            x:Name="OpenDialogButton"
            Content="Nuevo producto" 
            Command="{Binding ShowDialogCommand}" 
            Margin="10" />

        <!-- Scroll SOLO en la lista -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding ProductsList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:ProductControl Data="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>

</Page>
