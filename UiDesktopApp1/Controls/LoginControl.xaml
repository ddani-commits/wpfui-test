<UserControl x:Class="UiDesktopApp1.Controls.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UiDesktopApp1.Controls"
             mc:Ignorable="d" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="20" MaxWidth="300">
            <TextBlock 
                    Text="AsComputo" 
                    FontSize="36"
                    FontWeight="Bold"
                    Foreground="Black"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20"/>
            <TextBlock 
                    Text="Bienvenido a AsComputo PoS. Por favor, inicie sesion." 
                    FontSize="16"
                    Foreground="Black"
                    HorizontalAlignment="Left"
                    TextWrapping="Wrap"
                    Margin="0,0,0,20"/>

            <ui:TextBlock Text="Correo electronico:" Margin="0,0,0,5"/>
            <ui:TextBox Name="Email" Margin="0,0,0,10"/>

            <ui:TextBlock Text="Contraseña:" Margin="0,0,0,5"/>
            <ui:PasswordBox Name="Password" Margin="0,0,0,20"/>

            <ui:Button 
                Appearance="Primary"
                Content="Iniciar sesion"
                Name="LoginButton"  
                Width="Auto"
                Padding="8"
                Click="LoginButton_Click"
                HorizontalAlignment="Stretch"/>
        </StackPanel>
    </Grid>
</UserControl>